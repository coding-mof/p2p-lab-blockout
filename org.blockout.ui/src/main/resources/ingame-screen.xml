        childLayout="center"
        controller="org.blockout.ui.InGameGameState" >

<!--         <interact onClick="closePopup()" onSecondaryClick="closePopup()" onTertiaryClick="closePopup()" /> -->
        
        <effect>

            <onStartScreen
                name="fade"
                endColor="#000a"
                length="250"
                startColor="#0000" />

